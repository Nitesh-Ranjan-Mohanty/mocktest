<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Answer Details</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Sacramento&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Reenie+Beanie&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Sacramento&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&family=Reenie+Beanie&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Sacramento&display=swap');

        body {
            font-family: "Reenie Beanie", cursive;
            font-weight: 400;
            font-style: normal;
            line-height: 1.6;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
            color: #333;
        }

        .container {
            padding: 30px;
            border-radius: 5px;
            max-width: 800px;
            margin: 20px auto;

            background-color: #fdfdfd;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            background-image: radial-gradient(rgba(0, 0, 0, 0.02) 1px, transparent 1px),
                radial-gradient(rgba(0, 0, 0, 0.02) 1px, transparent 1px);
            background-position: 0 0, 25px 25px;
            background-size: 50px 50px;
        }

        p {
            font-size: 16px;
            line-height: 1.6;
            margin: 0 0 10px;
        }

        .header {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #007bff;
        }

        .answer {
            margin: 10px 0;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: #f9f9f9;
        }

        .explanation {
            color: #555;
        }

        .answer.explanation {
            font-family: Arial, sans-serif;
            font-size: 16px;
            line-height: 1.5;
            margin: 10px 0;
        }

        .answer.explanation strong {
            font-weight: bold;
        }

        .answer.explanation br {
            content: "\A";
            white-space: pre;
        }

        .button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-align: center;
            margin-top: 20px;
        }

        .button:hover {
            background-color: #0056b3;
        }

        .correct {
            background-color: rgb(209, 255, 209);
        }

        .incorrect {
            background-color: #ffcdcd;
        }

        .example_code_snipett {
            background: #000;
            color: #fff;
            border-radius: 7px;
            padding: 10px;
            padding-bottom: 10px;
            padding-bottom: 1px;
        }

        .button_container {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: flex-end;
        }
    </style>
</head>

<body>
    <div class="container">
        <p id="feedback" data-correct-answer="<%= correctAnswer %>" data-user-answer="<%= userAnswer %>"
            data-explanation="<%= explanation %>">
        </p>
        <p class="header">Answer Details</p>
        <% if (correctAnswer!==userAnswer) { %>
            <p class="answer correct">
                <strong>Correct Answer:</strong>
                <%= correctAnswer %>
            </p>
            <% } %>

                <p class="answer <%= (correctAnswer === userAnswer) ? 'correct' : 'incorrect' %>">
                    <strong>Your Answer:</strong>
                    <%= userAnswer %>
                </p>

                <div class="answer explanation">
                    <strong>Explanation:</strong><br />

                    <%- explanation %>
                </div>

                <% if (example) { %>
                    <div class="answer explanation">
                        <strong>Example:</strong><br />
                        <div class="example_code_snipett">
                            <%= example %>
                        </div>

                    </div>
                    <% } %>
                        <div class="button_container">
                            <button class="button" id="nextQuestionButton">Next Question</button>

                        </div>
    </div>
    <script src="/js/speech.js" type="module"></script>
</body>

</html>
