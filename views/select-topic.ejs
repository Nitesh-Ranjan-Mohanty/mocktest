<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Topic</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Sacramento&display=swap');

        body {
            font-family: "Roboto", sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            padding: 40px;
            border-radius: 8px;
            max-width: 900px;
            margin: 40px auto;
            background-color: #fff;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            background-image: radial-gradient(rgba(0, 0, 0, 0.02) 1px, transparent 1px),
                radial-gradient(rgba(0, 0, 0, 0.02) 1px, transparent 1px);
            background-position: 0 0, 25px 25px;
            background-size: 50px 50px;
        }

        h2 {
            font-size: 28px;
            color: #3b3b3b;
            text-align: left;
            margin-bottom: 20px;
            font-weight: 600;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 40px;
        }

        label {
            font-size: 16px;
            margin-bottom: 10px;
            color: #333;
        }

        select {
            padding: 12px;
            font-size: 18px;
            border: 2px solid #007bff;
            border-radius: 4px;
            margin-bottom: 20px;
            width: 100%;
            max-width: 350px;
            font-family: "Roboto", sans-serif;
            font-weight: 500;
            color: #007bff;
            transition: border-color 0.3s ease;
        }

        select:hover {
            border-color: #0056b3;
        }

        button {
            padding: 12px 30px;
            font-size: 18px;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            font-weight: 500;
        }

        button:hover {
            background-color: #0056b3;
        }

        button:focus {
            outline: none;
        }

        .resources_class {
            padding: 10px;
            font-size: 16px;
        }

        .container_resource {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .category {
            width: 48%;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .category h4 {
            font-size: 22px;
            color: #007bff;
            margin-bottom: 20px;
            text-decoration: underline;
        }

        .subCategory h4 {
            font-size: 20px;
            color: #333;
            margin-bottom: 15px;
        }

        .resources_class a {
            display: block;
            color: #007bff;
            text-decoration: none;
            margin: 8px 0;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .resources_class a:hover {
            color: #0056b3;
        }

        .subCategory .resources_class a {
            margin-left: 20px;
        }

        .category {
            margin-top: 20px;
        }

        @media (max-width: 768px) {
            .category {
                width: 100%;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Select a Topic</h2>
        <form action="/quiz/select-topic" method="POST">
            <select name="selectedTopic" id="topic">
                <% topics.forEach((topic)=> { %>
                    <option value="<%= topic %>">
                        <%= topic %>
                    </option>
                <% }) %>
            </select>
            <button type="submit">Start Quiz</button>
        </form>

        <div>
            <h2>Resources</h2>

            <div class="container_resource">
                <div class="category">
                    <h4>Node.js</h4>
                    <div class="resources_class">
                        <a href="/quiz/resources/nodejs">Node.js</a>
                    </div>
                </div>

                <div class="category">
                    <h4>Module Bundler / Build Tool</h4>
                    <div class="resources_class">
                        <a href="/quiz/resources/webpack">Webpack</a>
                    </div>
                </div>

                <div class="category">
                    <h4>HTML & CSS</h4>
                    <div class="resources_class">
                        <a href="/quiz/resources/html">HTML</a>
                    </div>
                    <div class="resources_class">
                        <a href="/quiz/resources/css">CSS</a>
                    </div>
                </div>

                <div class="category">
                    <h4>Java</h4>
                    <div class="resources_class">
                        <a href="/quiz/resources/java/sdkman">SDKMAN!</a>
                    </div>
                </div>

                <div class="category">
                    <h4>Data Interchange Formats</h4>
                    <div class="resources_class">
                        <a href="/quiz/resources/dif">XML and JSON</a>
                    </div>
                </div>

                <div class="category">
                    <h4>Transformation</h4>
                    <div class="resources_class">
                        <a href="/quiz/resources/xslt">XSLT</a>
                    </div>
                </div>

                <div class="category">
                    <h4>Database Management Systems</h4>
                    <div class="resources_class">
                        <a href="/quiz/resources/sql">SQL</a>
                    </div>
                </div>

                <div class="category">
                    <h4>Web Development Framework</h4>
                    <div class="resources_class">
                        <a href="/quiz/resources/struts">Struts</a>
                    </div>
                    <div class="subCategory">
                        <h4>JavaScript Frameworks</h4>
                        <div class="resources_class">
                            <a href="/quiz/resources/react">React</a>
                        </div>
                        <div class="resources_class">
                            <a href="/quiz/resources/nodejs">Node JS</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
